{
  "$schema": "https://json.schemastore.org/claude-code-settings.json",
  "includeCoAuthoredBy": false,
  "permissions": {
    "allow": [
      "Read(*)",
      "Search(*)",
      "Edit(*)",
      "Write(*)",
      "Bash"
    ]
  },
  "statusLine": {
    "type": "command",
    "command": "bash ~/.claude/statusline.sh"
  },
  "commands": {
    "speedtest": {
      "command": "bash ~/.claude/statusline.sh force-speedtest",
      "description": "Run a fresh internet speed test"
    },
    "speed-check": {
      "command": "bash ~/.claude/statusline.sh speed-check",
      "description": "Check for speed test keywords in natural language input"
    }
  },
  "enabledPlugins": {
    "ralph-loop@claude-plugins-official": true
  }
}
